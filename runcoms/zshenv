dyld_insert() {

  [[ -f "$1" ]] && export DYLD_INSERT_LIBRARIES="$1${DYLD_INSERT_LIBRARIES:+:$DYLD_INSERT_LIBRARIES}"
  typeset -u DYLD_INSERT_LIBRARIES
}

